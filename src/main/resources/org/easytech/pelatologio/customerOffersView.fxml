<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerOffersController">
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <TableView fx:id="offersTable" styleClass="striped" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="descriptionColumn" maxWidth="5000.0" minWidth="120.0" prefWidth="300.0" text="Περιγραφή" />
                <TableColumn fx:id="offerDateColumn" maxWidth="394.0" minWidth="130.0" prefWidth="180.0" text="Ημερ. Προσφοράς" />
                <TableColumn fx:id="statusColumn" maxWidth="180.0" minWidth="120.0" prefWidth="120.0" text="Κατάσταση" />
                <TableColumn fx:id="response_dateColumn" maxWidth="700.0" minWidth="120.0" prefWidth="183.0" text="Ημερ. Απόκρισης" />
                <TableColumn fx:id="sendedColumn" maxWidth="700.0" minWidth="120.0" prefWidth="183.0" text="Email?" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask" text="Προσθήκη εργασίας">
                            <graphic>
                                <FontAwesomeIcon glyphName="TASKS" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleShareOffer" text="Αντιγραφή συνδέσμου">
                            <graphic>
                                <FontAwesomeIcon glyphName="SHARE_ALT" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleSendEmail" text="Αποστολή E-mail">
                            <graphic>
                                <FontAwesomeIcon glyphName="ENVELOPE" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleAccept" text="Αποδοχή">
                            <graphic>
                                <FontAwesomeIcon glyphName="CHECK" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleReject" text="Απόρριψη">
                            <graphic>
                                <FontAwesomeIcon glyphName="TIMES" />
                            </graphic>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="createOfferButton" styleClass="accent" text="Δημιουργία Προσφοράς">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
            </Button>
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="addOfferButton" styleClass="accent" text="Προσθήκη">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
            </Button>
            <Button fx:id="editOfferButton" styleClass="success" text="Επεξεργασία">
                <graphic>
                    <FontAwesomeIcon glyphName="PENCIL" />
                </graphic>
            </Button>
            <Button fx:id="deleteOfferButton" styleClass="danger" text="Διαγραφή">
                <graphic>
                    <FontAwesomeIcon glyphName="TRASH" />
                </graphic>
            </Button>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </VBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerOffersController">
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <TableView fx:id="offersTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID"/>
                <TableColumn fx:id="descriptionColumn" maxWidth="5000.0" minWidth="120.0" prefWidth="300.0"
                             text="Περιγραφή"/>
                <TableColumn fx:id="offerDateColumn" maxWidth="394.0" minWidth="130.0" prefWidth="180.0"
                             text="Ημερ. Προσφοράς"/>
                <TableColumn fx:id="statusColumn" maxWidth="180.0" minWidth="120.0" prefWidth="120.0" text="Κατάσταση"/>
                <TableColumn fx:id="response_dateColumn" maxWidth="700.0" minWidth="120.0" prefWidth="183.0"
                             text="Ημερ. Απόκρισης"/>
                <TableColumn fx:id="sendedColumn" maxWidth="700.0" minWidth="120.0" prefWidth="183.0" text="Email?"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask" styleClass="menu-item"
                                  text="Προσθήκη εργασίας"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleShareOffer" styleClass="menu-item"
                                  text="Αντιγραφή συνδέσμου"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleSendEmail" styleClass="menu-item"
                                  text="Αποστολή E-mail"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAccept" styleClass="menu-item"
                                  text="Αποδοχή"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleReject" styleClass="menu-item"
                                  text="Απόρριψη"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </VBox.margin>
    </VBox>
    <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
        <JFXButton fx:id="createOfferButton" buttonType="RAISED" layoutX="317.0" layoutY="10.0"
                   styleClass="click-button" text="Δημηουργία Προσφοράς">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@icons/add.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
        <Separator visible="false" HBox.hgrow="ALWAYS"/>
        <JFXButton fx:id="addOfferButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button"
                   text="Προσθήκη">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/add.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="editOfferButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button"
                   text="Επεξεργασία">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/edit.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="deleteOfferButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button"
                   text="Διαγραφή">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/remove.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </JFXButton>
        <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </BorderPane.margin>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </VBox.margin>
    </HBox>
</VBox>

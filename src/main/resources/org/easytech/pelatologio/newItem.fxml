<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane expanded="true" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.AddNewItemController">
    <content>
        <BorderPane>
            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
                    <VBox alignment="CENTER" styleClass="pane" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                            </VBox.margin>

                            <Label prefWidth="205.0" styleClass="normal-label" text="Είδος:">
                                <font>
                                    <Font size="24.0" />
                                </font>
                                <padding>
                                    <Insets right="20.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="tfName" HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </TextField>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                            </VBox.margin>

                            <Label prefWidth="205.0" styleClass="normal-label" text="Περιγραφή:">
                                <font>
                                    <Font size="24.0" />
                                </font>
                                <padding>
                                    <Insets right="20.0" />
                                </padding>
                            </Label>
                            <TextArea fx:id="taDescription" onMouseClicked="#handleMouseClick" prefHeight="102.0" prefRowCount="4" prefWidth="555.0" HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </TextArea>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </center>
        </BorderPane>
    </content>
</DialogPane>

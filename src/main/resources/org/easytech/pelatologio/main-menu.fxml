<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@external.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.MainMenuController">
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <BorderPane fx:id="rootPane" StackPane.alignment="CENTER">
            <center>
                <GridPane alignment="TOP_CENTER" hgap="50.0" vgap="50.0" BorderPane.alignment="TOP_CENTER">
                    <Button contentDisplay="TOP" minHeight="100.0" minWidth="220.0" mnemonicParsing="false" onAction="#customersClick" styleClass="click-button" text="Πελάτες" textAlignment="CENTER">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/users.png" />
                            </ImageView>
                        </graphic>
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                    <Button contentDisplay="TOP" minHeight="100.0" minWidth="220.0" mnemonicParsing="false" onAction="#settingsClick" styleClass="click-button" text="Ρυθμίσεις" textAlignment="CENTER" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/settings.png" />
                            </ImageView>
                        </graphic>
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </Button>
                </GridPane>
            </center>
            <top>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="20.0" top="10.0" />
                    </BorderPane.margin>
                    <Label styleClass="header-label" text="Πελατολόγιο">
                        <font>
                            <Font size="38.0" />
                        </font>
                    </Label>
                </HBox>
            </top>
         <bottom>
            <VBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="vesrion" alignment="CENTER" text="v 4.1.0">
                     <VBox.margin>
                        <Insets bottom="10.0" right="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

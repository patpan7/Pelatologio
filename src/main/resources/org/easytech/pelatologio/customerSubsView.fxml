<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerSubsController">
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <TableView fx:id="subsTable" styleClass="striped" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="titleColumn" maxWidth="5000.0" minWidth="120.0" prefWidth="300.0" text="Τίτλος" />
                <TableColumn fx:id="endDateColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Ημερ. Λήξης" />
                <TableColumn fx:id="categoryColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Κατηγορία" />
                <TableColumn fx:id="priceColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Τιμή" />
                <TableColumn fx:id="sendedColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="E-mail?" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSendMail" text="Αποστολή E-mail">
                            <graphic>
                                <FontAwesomeIcon glyphName="ENVELOPE" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleCopy" text="Αντιγραφή">
                            <graphic>
                                <FontAwesomeIcon glyphName="COPY" />
                            </graphic>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="renewButton" mnemonicParsing="false" styleClass="accent" text="Ανανέωση">
                <graphic>
                    <FontAwesomeIcon glyphName="RECYCLE" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="addTaskButton" styleClass="accent" text="Προσθήκη">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="editTaskButton" styleClass="success" text="Επεξεργασία">
                <graphic>
                    <FontAwesomeIcon glyphName="PENCIL" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="deleteTaskButton" styleClass="danger" text="Διαγραφή">
                <graphic>
                    <FontAwesomeIcon glyphName="TRASH" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </VBox>
</VBox>

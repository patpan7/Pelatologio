<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER"   xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerSubsController">
    <VBox alignment="TOP_CENTER"  HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <TableView fx:id="subsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID"/>
                <TableColumn fx:id="titleColumn" text="Τίτλος"/>
                <TableColumn fx:id="endDateColumn" text="Ημερ. Λήξης"/>
                <TableColumn fx:id="categoryColumn" text="Κατηγορία"/>
                <TableColumn fx:id="priceColumn" text="Τιμή"/>
                <TableColumn fx:id="sendedColumn" text="E-mail?"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSendMail" 
                                  text="Αποστολή E-mail"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleCopy" 
                                  text="Αντιγραφή"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="renewButton" mnemonicParsing="false" prefWidth="230.0"
                     text="Ανανέωση">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/complete.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Separator visible="false" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addTaskButton" prefWidth="220.0" 
                    text="Προσθήκη">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/add.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Button fx:id="editTaskButton" prefWidth="220.0" 
                    text="Επεξεργασία">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/edit.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Button fx:id="deleteTaskButton" prefWidth="220.0" 
                    text="Διαγραφή">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/remove.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </VBox.margin>
        </HBox>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </VBox.margin>
    </VBox>
</VBox>

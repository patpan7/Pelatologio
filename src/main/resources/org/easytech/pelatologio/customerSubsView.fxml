<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerSubsController">
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <TableView fx:id="subsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="titleColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0" text="Τίτλος" />
                <TableColumn fx:id="endDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0" text="Ημερ. Λήξης" />
                <TableColumn fx:id="categoryColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Κατηγορία" />
                <TableColumn fx:id="priceColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0" text="Τιμή" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSendMail" styleClass="menu-item"
                                  text="Αποστολή E-mail"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleCopy" styleClass="menu-item"
                                  text="Αντιγραφή"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </VBox>
    <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
        <JFXButton fx:id="renewButton" buttonType="RAISED" mnemonicParsing="false" prefWidth="230.0" styleClass="click-button" text="Ανανέωση">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/complete.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </JFXButton>
        <Separator visible="false" HBox.hgrow="ALWAYS" />
        <JFXButton fx:id="addTaskButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button" text="Προσθήκη">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/add.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="editTaskButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button" text="Επεξεργασία">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/edit.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="deleteTaskButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button" text="Διαγραφή">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/remove.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </JFXButton>
        <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </BorderPane.margin>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0"  
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.easytech.pelatologio.DeviceController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
        <BorderPane fx:id="rootPane"  StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Φίλτρα:">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <CheckBox fx:id="showAllCheckbox" selected="true" text="Όλες">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="showWithCustomerCheckbox" text="Με πελάτη">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="showWithoutCustomerCheckbox" text="Χωρίς πελάτη">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <Separator orientation="VERTICAL"/>
                        <Label text="Είδος:">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="itemFilterComboBox" editable="true" prefHeight="51.0" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <VBox.margin>
                            <Insets left="20.0" right="20.0"/>
                        </VBox.margin>
                    </HBox>
                    <HBox alignment="CENTER" VBox.vgrow="NEVER">
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0"/>
                        </VBox.margin>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="S/N">
                            <font>
                                <Font name="System Bold" size="30.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="filterField" prefWidth="250.0">
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets left="10.0" right="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="btnClear"  mnemonicParsing="false" onAction="#clean"
                                   text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/clean.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Separator orientation="VERTICAL"/>
                        <Label text="Ποσοστό:">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="rateFilterComboBox" editable="true" prefHeight="51.0" prefWidth="150.0"
                                  HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <Label fx:id="countLabel" text="Label"/>
                        <Separator visible="false" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addDeviceButton"  mnemonicParsing="false"
                                   text="Προσθήκη S/N">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <TableView fx:id="devicesTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" maxWidth="80.0" minWidth="80.0" text="ID"/>
                            <TableColumn fx:id="serialColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0"
                                         text="Serial Number"/>
                            <TableColumn fx:id="itemColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                         text="Είδος"/>
                            <TableColumn fx:id="descriptionColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0"
                                         text="Περιγραφή"/>
                            <TableColumn fx:id="customerColumn" minWidth="280.0" prefWidth="280.0" text="Πελάτης"/>
                            <TableColumn fx:id="rateColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0"
                                         text="Rate"/>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditDevice" text="Επεξεργασία"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddDevice"
                                              text="Προσθήκη"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleDeleteDevice"
                                              text="Διαγραφή"/>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
        </BorderPane>
    </ScrollPane>
</StackPane>


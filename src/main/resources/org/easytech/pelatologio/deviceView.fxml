<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.DeviceController">
    <BorderPane minHeight="800.0" minWidth="1200.0" styleClass="pane" stylesheets="@external.css">
        <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </BorderPane.margin>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label styleClass="header-label" text="Πελατολόγιο -  Συσκευές" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="38.0" />
                        </font>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <opaqueInsets>
                        <Insets right="20.0" />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <Button mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button" text="Επιστροφή">
                        <graphic>
                            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/menu.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                </HBox>
            </HBox>
        </top>
        <center>
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="normal-label" text="Φίλτρα:">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></Label>
                    <CheckBox fx:id="showAllCheckbox" selected="true" styleClass="normal-label" text="Όλες">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
                    <CheckBox fx:id="showWithCustomerCheckbox" styleClass="normal-label" text="Με πελάτη">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
                    <CheckBox fx:id="showWithoutCustomerCheckbox" styleClass="normal-label" text="Χωρίς πελάτη">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
               <Separator orientation="VERTICAL" />
                <Label styleClass="normal-label" text="Είδος:">
                  <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </HBox.margin></Label>
                <ComboBox fx:id="itemFilterComboBox" editable="true" prefHeight="51.0" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </HBox.margin></ComboBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" />
                    </VBox.margin>
                    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Αναζήτηση">
                        <font>
                            <Font name="System Bold" size="30.0" />
                        </font>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <padding>
                            <Insets right="20.0" />
                        </padding>
                    </Label>
                    <TextField fx:id="filterField" prefWidth="300.0">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </TextField>
                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clean" styleClass="click-button">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@icons/clean.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets left="5.0" />
                        </HBox.margin>
                    </Button>
                    <Separator prefWidth="200.0" visible="false" HBox.hgrow="ALWAYS" />
               <Button fx:id="addDeviceButton" mnemonicParsing="false" styleClass="click-button" text="Προσθήκη S/N">
                   <graphic>
                       <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@icons/add.png" />
                       </ImageView>
                   </graphic>
                   <HBox.margin>
                       <Insets left="10.0" right="10.0" />
                   </HBox.margin>
               </Button>
            </HBox>

                <TableView fx:id="devicesTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="serialColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0" text="Serial Number" />
                        <TableColumn fx:id="itemColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Είδος" />
                        <TableColumn fx:id="descriptionColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0" text="Περιγραφή" />
                        <TableColumn fx:id="customerColumn" minWidth="280.0" prefWidth="280.0" text="Πελάτης" />
                        <TableColumn fx:id="rateColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Rate" />
                    </columns>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem onAction="#handleEditDevice" styleClass="menu-item" text="Επεξεργασία" />
                                <MenuItem mnemonicParsing="false" onAction="#handleAddDevice" styleClass="menu-item" text="Προσθήκη" />
                                <MenuItem mnemonicParsing="false" onAction="#handleDeleteDevice" styleClass="menu-item" text="Διαγραφή" />

                            </items>
                        </ContextMenu>
                    </contextMenu>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </VBox>

        </center>
    </BorderPane>
</StackPane>

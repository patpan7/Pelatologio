<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<DialogPane stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.EditAddressController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <Label styleClass="title-label" text="Προσθήκη Νέας διεύθυνσης">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <FontAwesomeIcon glyphName="MAP_MARKER" />
                    <FontAwesomeIcon glyphName="BUILDING" GridPane.rowIndex="1" />
                    <FontAwesomeIcon glyphName="ENVELOPE" GridPane.rowIndex="2" />
                    <FontAwesomeIcon glyphName="HOME" GridPane.rowIndex="3" />
                    <TextField fx:id="addressField" promptText="Διεύθυνση" GridPane.columnIndex="1" />
                    <TextField fx:id="townField" promptText="Πόλη" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <TextField fx:id="postcodeField" promptText="T.K." GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <TextField fx:id="storeField" promptText="Υποκατάστημα" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
            </GridPane>
        </VBox>
    </content>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</DialogPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.helper.CallerPopupController">
    <content>
        <VBox alignment="CENTER" spacing="10">
         <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/phone-ringing.png" />
            </image>
         </ImageView>
            <Label fx:id="callerNumberLabel" styleClass="content-label" text="2241036750" wrapText="true">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Label>
            <Label fx:id="callerTitleLabel" styleClass="content-label" text="2241036750">
            <font>
               <Font size="14.0" />
            </font></Label>
            <HBox alignment="BOTTOM_RIGHT" spacing="10">
                <JFXButton fx:id="openCustomerButton" defaultButton="true" styleClass="click-button" text="Άνοιγμα Πελάτη" />
                <JFXButton fx:id="closeButton" cancelButton="true" styleClass="click-button" text="Κλείσιμο" />
            </HBox>
        </VBox>
    </content>
</DialogPane>

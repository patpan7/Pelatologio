<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<DialogPane stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.helper.CallerPopupController">
    <content>
        <VBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@icons/phone-ringing.png" />
            </ImageView>
            <Label fx:id="callerNameLabel" alignment="CENTER" styleClass="title-label" text="Όνομα Πελάτη" textAlignment="CENTER" textOverrun="ELLIPSIS" />
            <Label fx:id="callerNumberLabel" alignment="CENTER" styleClass="normal-label" text="2241036750" textAlignment="CENTER" />
            <HBox alignment="BOTTOM_RIGHT" spacing="10">
                <Button fx:id="openCustomerButton" defaultButton="true" styleClass="accent" text="Άνοιγμα Πελάτη" />
                <Button fx:id="closeButton" cancelButton="true" styleClass="default" text="Κλείσιμο" />
            </HBox>
        </VBox>
    </content>
</DialogPane>

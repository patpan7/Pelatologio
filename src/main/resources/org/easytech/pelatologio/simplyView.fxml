<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<HBox alignment="TOP_CENTER"   stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.SimplyViewController">
    <VBox alignment="TOP_CENTER"  HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </HBox.margin>
        <TableView fx:id="loginTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username"/>
                <TableColumn fx:id="passwordColumn" text="Password"/>
                <TableColumn fx:id="tagColumn" text="Tag"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditLogin" text="Επεξεργασία"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddLogin"
                                  text="Προσθήκη"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteLogin"
                                  text="Διαγραφή"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" onAction="#handleLabel"
                                  text="Ετικέτα"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleCopy"
                                  text="Αντιγραφή Login"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask"
                                  text="Προσθήκη εργασίας"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddSub"
                                  text="Προσθήκη Συμβολαίου"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefWidth="277.0"
                text="Προσθήκη Νέου Login">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="editButton" onAction="#handleEditLogin" prefWidth="277.0"
                text="Επεξεργασία">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefWidth="277.0"
                text="Διαγραφή">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <VBox alignment="TOP_CENTER" prefWidth="300.0"  HBox.hgrow="NEVER">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </HBox.margin>
        <Button fx:id="btnSimplyPOS" mnemonicParsing="false" onMouseClicked="#simplyposOpen"
                prefWidth="277.0" text="Simply POS">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="btnSimplyCash" mnemonicParsing="false" onMouseClicked="#simplycashOpen"
                prefWidth="277.0" text="Simply Cash">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="btnSimplyRest" mnemonicParsing="false" onMouseClicked="#simplyrestOpen"
                prefWidth="277.0" text="Simply Rest" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="btnSimplyPOSRegister" mnemonicParsing="false" onAction="#registerposOpen"
                prefWidth="277.0" text="Εγγραφή Simply POS" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="btnSimplyCloudRegister" mnemonicParsing="false"
                onAction="#registercloudOpen" prefWidth="277.0"
                text="Εγγραφή Simply Cloud">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <VBox fx:id="progressBox">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <Label text="Πρόοδος" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label text="Διάρκεια ετών:"/>
                <ComboBox fx:id="cbContractDuration">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="1"/>
                            <String fx:value="2"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <CheckBox fx:id="cbStock" prefWidth="63.0" text="Stock"/>
            <CheckBox fx:id="cbRegister" prefWidth="63.0" text="Εγγραφή"/>
            <CheckBox fx:id="cbAuth" prefWidth="63.0" text="Εξουσιοδότηση"/>
            <CheckBox fx:id="cbAccept" prefWidth="63.0" text="Αποδοχή Σύμβασης"/>
            <CheckBox fx:id="cbMail" prefWidth="63.0" text="Αποστολή Mail"/>
            <CheckBox fx:id="cbParam" prefWidth="63.0" text="Ολοκ. Παραμετρ"/>
            <CheckBox fx:id="cbMydata" prefWidth="63.0" text="Ολοκ. MyData"/>
            <CheckBox fx:id="cbDelivered" prefWidth="63.0" text="Παράδοση"/>
            <CheckBox fx:id="cbPaid" prefWidth="63.0" text="Πληρωμή Πελάτη"/>

        </VBox>
    </VBox>
</HBox>
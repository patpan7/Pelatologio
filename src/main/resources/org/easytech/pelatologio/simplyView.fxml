<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="TOP_CENTER" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.SimplyViewController">
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <TableView fx:id="loginTable" styleClass="striped" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="passwordColumn" text="Password" />
                <TableColumn fx:id="tagColumn" text="Tag" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditLogin" text="Επεξεργασία">
                            <graphic>
                                <FontAwesomeIcon glyphName="PENCIL" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddLogin" text="Προσθήκη">
                            <graphic>
                                <FontAwesomeIcon glyphName="PLUS" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteLogin" text="Διαγραφή">
                            <graphic>
                                <FontAwesomeIcon glyphName="TRASH" />
                            </graphic>
                        </MenuItem>
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" onAction="#handleLabel" text="Ετικέτα">
                            <graphic>
                                <FontAwesomeIcon glyphName="TAG" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleCopy" text="Αντιγραφή Login">
                            <graphic>
                                <FontAwesomeIcon glyphName="COPY" />
                            </graphic>
                        </MenuItem>
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask" text="Προσθήκη εργασίας">
                            <graphic>
                                <FontAwesomeIcon glyphName="TASKS" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddSub" text="Προσθήκη Συμβολαίου">
                            <graphic>
                                <FontAwesomeIcon glyphName="FILES_ALT " />
                            </graphic>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefWidth="277.0" styleClass="accent" text="Προσθήκη Login">
            <graphic>
                <FontAwesomeIcon glyphName="PLUS" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="editButton" onAction="#handleEditLogin" prefWidth="277.0" styleClass="success" text="Επεξεργασία">
            <graphic>
                <FontAwesomeIcon glyphName="PENCIL" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefWidth="277.0" styleClass="danger" text="Διαγραφή">
            <graphic>
                <FontAwesomeIcon glyphName="TRASH" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Button>
    </VBox>
    <VBox alignment="TOP_CENTER" prefWidth="300.0" HBox.hgrow="NEVER">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <Button fx:id="btnSimplyPOS" mnemonicParsing="false" onMouseClicked="#simplyposOpen" prefWidth="277.0" styleClass="default" text="Simply POS">
            <graphic>
                <FontAwesomeIcon glyphName="EXTERNAL_LINK" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnSimplyCash" mnemonicParsing="false" onMouseClicked="#simplycashOpen" prefWidth="277.0" styleClass="default" text="Simply Cash">
            <graphic>
                <FontAwesomeIcon glyphName="EXTERNAL_LINK" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnSimplyRest" mnemonicParsing="false" onMouseClicked="#simplyrestOpen" prefWidth="277.0" styleClass="default" text="Simply Rest" VBox.vgrow="ALWAYS">
            <graphic>
                <FontAwesomeIcon glyphName="EXTERNAL_LINK" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnSimplyPOSRegister" mnemonicParsing="false" onAction="#registerposOpen" prefWidth="277.0" styleClass="default" text="Εγγραφή Simply POS" VBox.vgrow="ALWAYS">
            <graphic>
                <FontAwesomeIcon glyphName="USER_PLUS" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="btnSimplyCloudRegister" mnemonicParsing="false" onAction="#registercloudOpen" prefWidth="277.0" styleClass="default" text="Εγγραφή Simply Cloud">
            <graphic>
                <FontAwesomeIcon glyphName="USER_PLUS" />
            </graphic>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Button>
        <VBox fx:id="progressBox">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <Label styleClass="normal-label" text="Πρόοδος" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label styleClass="normal-label" text="Διάρκεια ετών:" />
                <ComboBox fx:id="cbContractDuration">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="1" />
                            <String fx:value="2" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <ToggleSwitch fx:id="cbStock" text="Stock" />
            <ToggleSwitch fx:id="cbRegister" text="Εγγραφή" />
            <ToggleSwitch fx:id="cbAuth" text="Εξουσιοδότηση" />
            <ToggleSwitch fx:id="cbAccept" text="Αποδοχή Σύμβασης" />
            <ToggleSwitch fx:id="cbMail" text="Αποστολή Mail" />
            <ToggleSwitch fx:id="cbParam" text="Ολοκ. Παραμετρ" />
            <ToggleSwitch fx:id="cbMydata" text="Ολοκ. MyData" />
            <ToggleSwitch fx:id="cbDelivered" text="Παράδοση" />
            <ToggleSwitch fx:id="cbPaid" text="Πληρωμή Πελάτη" />

        </VBox>
    </VBox>
</HBox>

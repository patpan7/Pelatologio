<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<DialogPane prefHeight="800.0" prefWidth="1100.0" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.SimplyViewController">
    <content>
        <VBox alignment="TOP_CENTER">
            <Label fx:id="customerLabel" styleClass="header-label" text="Όνομα Πελάτη: [Όνομα Πελάτη]" textOverrun="CLIP" />
            <HBox alignment="TOP_CENTER">
                <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                    <!-- Πίνακας για τα Logins -->
                    <TableView fx:id="loginTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="usernameColumn" text="Username"/>
                            <TableColumn fx:id="passwordColumn" text="Password"/>
                            <TableColumn fx:id="tagColumn" text="Tag"/>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditLogin" styleClass="menu-item" text="Επεξεργασία" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddLogin" styleClass="menu-item" text="Προσθήκη" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleDeleteLogin" styleClass="menu-item" text="Διαγραφή" />
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#handleLabel" styleClass="menu-item" text="Ετικέτα" />
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddTask" styleClass="menu-item" text="Προσθήκη εργασίας" />
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <!-- Κουμπί για προσθήκη νέου login -->
                    <JFXButton fx:id="addLoginButton" maxWidth="277.0" onAction="#handleAddLogin" prefHeight="55.0"
                               styleClass="click-button" text="Προσθήκη Νέου Login">
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </JFXButton>
                    <JFXButton fx:id="editButton" maxWidth="277.0" onAction="#handleEditLogin" prefHeight="55.0"
                               styleClass="click-button" text="Επεξεργασία">
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </JFXButton>
                    <JFXButton fx:id="deleteButton" maxWidth="277.0" onAction="#handleDeleteLogin" prefHeight="55.0"
                               styleClass="click-button" text="Διαγραφή">
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </JFXButton>
                </VBox>
                <!-- Λίστα με κουμπιά για άλλες εργασίες -->
                <VBox alignment="TOP_CENTER" prefWidth="300.0" HBox.hgrow="NEVER">
                    <children>
                        <JFXButton fx:id="btnSimplyPOS" maxWidth="277.0" mnemonicParsing="false"
                                   onMouseClicked="#simplyposOpen" prefHeight="55.0" styleClass="click-button"
                                   text="Simply POS">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </JFXButton>
                        <JFXButton fx:id="btnSimplyCash" maxWidth="277.0" mnemonicParsing="false"
                                   onMouseClicked="#simplycashOpen" prefHeight="55.0" styleClass="click-button"
                                   text="Simply Cash">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </JFXButton>
                        <JFXButton fx:id="btnSimplyRest" maxWidth="277.0" mnemonicParsing="false"
                                   onMouseClicked="#simplyrestOpen" prefHeight="55.0" styleClass="click-button"
                                   text="Simply Rest" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </JFXButton>
                        <JFXButton fx:id="btnSimplyPOSRegister" maxWidth="277.0" mnemonicParsing="false"
                                   onAction="#registerposOpen" prefHeight="55.0" styleClass="click-button"
                                   text="Εγγραφή Simply POS" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="btnSimplyCloudRegister" mnemonicParsing="false" onAction="#registercloudOpen"
                                   prefHeight="55.0" styleClass="click-button" text="Εγγραφή Simply Cloud">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </JFXButton>
                    </children>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </VBox>
            </HBox>
        </VBox>
    </content>
</DialogPane>

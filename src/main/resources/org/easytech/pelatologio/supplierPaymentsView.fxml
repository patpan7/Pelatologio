<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@custom-atlantafx.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.easytech.pelatologio.SupplierPaymentsViewController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label styleClass="title-label" text="Πληρωμές Προμηθευτών"/>
        </VBox>
    </top>
    <center>
        <TableView fx:id="paymentsTable" styleClass="striped" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="customerColumn" prefWidth="200.0" text="Πελάτης"/>
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Ημερομηνία"/>
                <TableColumn fx:id="amountColumn" prefWidth="120.0" text="Ποσό"/>
                <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Περιγραφή"/>
                <TableColumn fx:id="calculatedColumn" prefWidth="100.0" text="Υπολογίστηκε"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button onAction="#handleAddPayment" styleClass="accent" text="Προσθήκη Πληρωμής">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
            </Button>
            <Button onAction="#handleEditPayment" styleClass="success" text="Επεξεργασία">
                <graphic>
                    <FontAwesomeIcon glyphName="PENCIL" />
                </graphic>
            </Button>
            <Button onAction="#handleDeletePayment" styleClass="danger" text="Διαγραφή">
                <graphic>
                    <FontAwesomeIcon glyphName="TRASH" />
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CommissionsController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
        <BorderPane fx:id="rootPane" StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                    </HBox>
                    <TableView fx:id="commissionsTable" styleClass="striped" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="partnerColumn" prefWidth="150.0" text="Συνεργάτης" />
                            <TableColumn fx:id="customerColumn" prefWidth="150.0" text="Πελάτης" />
                            <TableColumn fx:id="supplierColumn" prefWidth="150.0" text="Προμηθευτής" />
                            <TableColumn fx:id="rateColumn" prefWidth="100.0" text="Ποσοστό (%)" />
                            <TableColumn fx:id="startDateColumn" prefWidth="120.0" text="Ημ/νία Έναρξης" />
                            <TableColumn fx:id="endDateColumn" prefWidth="120.0" text="Ημ/νία Λήξης" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <BorderPane.margin>
                            <Insets top="10.0" />
                        </BorderPane.margin>
                    </TableView>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                    <Separator visible="false" HBox.hgrow="ALWAYS" />
                    <Button fx:id="handleAddCommission" onAction="#handleAddCommission" prefWidth="220.0" styleClass="accent" text="Προσθήκη">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/add.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="handleEditCommission" onAction="#handleEditCommission" prefWidth="220.0" styleClass="success" text="Επεξεργασία">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/edit.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="handleDeleteCommission" onAction="#handleDeleteCommission" prefWidth="220.0" styleClass="danger" text="Διαγραφή">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/remove.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

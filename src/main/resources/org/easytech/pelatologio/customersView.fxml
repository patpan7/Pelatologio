<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomersController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
        <BorderPane fx:id="rootPane" StackPane.alignment="CENTER">

            <!-- Top φίλτρα -->
            <top>
                <VBox BorderPane.alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin><!-- Μετρητής Πελατών -->
                    <Label fx:id="customerCounterLabel" text="Πελάτες: 0">
                        <VBox.margin>
                            <Insets left="10.0" />
                        </VBox.margin>
                    </Label>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <!-- Αναζήτηση -->
                        <TextField fx:id="filterField" prefWidth="280.0" promptText="Αναζήτηση..." />

                        <!-- Κουμπί φίλτρου -->
                        <Button fx:id="filterButton" styleClass="default" text="Περισσότερα Φίλτρα">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/filter.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>

                        <!-- Κουμπί προσθήκης -->
                        <Button mnemonicParsing="false" onAction="#customerAddNew" styleClass="accent" text="Νέος Πελάτης">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>

                        <!-- Καθαρισμός φίλτρων -->
                        <Button fx:id="btnClean" mnemonicParsing="false" onMouseClicked="#clean" styleClass="danger" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/clean.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                        <Separator HBox.hgrow="ALWAYS" />

                        <!-- Ανανέωση -->
                        <Button fx:id="btnRefresh" mnemonicParsing="false" onMouseClicked="#refresh" styleClass="default" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/refresh.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>
                </VBox>
            </top>

            <!-- Left Sidebar for Filters -->
            <left>
                <VBox fx:id="filterPane" alignment="TOP_LEFT" managed="false" prefWidth="250.0" spacing="10.0" style="-fx-padding: 10;" visible="false">
                    <Label styleClass="normal-label" text="Φίλτρα" />
                    <Separator prefWidth="200.0" />
                    <Label styleClass="normal-label" text="Αναζήτηση σε" />
                    <ComboBox fx:id="searchFieldComboBox" prefWidth="280.0" promptText="Όλα τα πεδία" />
                    <Label styleClass="normal-label" text="Κατάσταση" />
                    <ComboBox fx:id="statusComboBox" prefWidth="280.0" promptText="Επιλογή Κατάστασης" />
                    <Label styleClass="normal-label" text="Σύσταση" />
                    <ComboBox fx:id="recommendationComboBox" prefWidth="280.0" promptText="Επιλογή Σύστασης" />
                    <Label styleClass="normal-label" text="Ομάδα" />
                    <ComboBox fx:id="jobTeamComboBox" prefWidth="280.0" promptText="Επιλογή Ομάδας" />
                    <Label styleClass="normal-label" text="Υπο-ομάδα" />
                    <ComboBox fx:id="subJobTeamComboBox" disable="true" prefWidth="280.0" promptText="Επιλογή Υπο-ομάδας" />
                    <Label styleClass="normal-label" text="Εφαρμογή" />
                    <ComboBox fx:id="appComboBox" prefWidth="280.0" promptText="Επιλογή Εφαρμογής" />
                    <Button fx:id="clearAdvancedFiltersButton" styleClass="danger" text="Καθαρισμός Φίλτρων" />
                </VBox>
            </left>

            <!-- Center Table -->
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <TableView fx:id="customerTable" styleClass="bordered" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="codeColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" resizable="true" text="Id" />
                            <TableColumn fx:id="nameColumn" minWidth="260.0" prefWidth="328.0" resizable="true" text="Όνομα" />
                            <TableColumn fx:id="titleColumn" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" resizable="true" text="Τίτλος" />
                            <TableColumn fx:id="afmColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" resizable="true" sortable="false" text="ΑΦΜ" />
                            <TableColumn fx:id="phone1Column" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" text="Τηλέφωνο 1" />
                            <TableColumn fx:id="mobileColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" text="Κινητό" />
                            <TableColumn fx:id="townColumn" maxWidth="145.0" minWidth="90.0" prefWidth="90.0" resizable="true" text="Πόλη" />
                            <TableColumn fx:id="emailColumn" maxWidth="320.0" minWidth="160.0" prefWidth="160.0" sortable="false" text="E-mail" />
                            <TableColumn fx:id="balanceColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" resizable="true" text="Υπόλοιπο" />
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditOption" text="Επεξεργασία">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="PENCIL" />
                                        </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" onAction="#customerAddNew" text="Προσθήκη">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="PLUS" />
                                        </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" onAction="#customerDelete" text="Διαγραφή">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="TRASH" />
                                        </graphic>
                                    </MenuItem>
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#unlock" text="Ξεκλείδωμα">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="UNLOCK" />
                                        </graphic>
                                    </MenuItem>
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#customerNewTask" text="Νέα Εργασία">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="TASKS" />
                                        </graphic>
                                    </MenuItem>
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#customerInfo" text="Αντιγραφή Στοιχείων">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="COPY" />
                                        </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" onAction="#customerLabel" text="Ετικέτα Πελάτη">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="TAG" />
                                        </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" onAction="#viberOpen" text="Επικοινωνία Viber">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="COMMENT" />
                                        </graphic>
                                    </MenuItem>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </center>

            <!-- Κάτω κουμπιά εφαρμογών -->
            <bottom>
                <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <Button fx:id="btnTaxis" onMouseClicked="#taxisClick" prefWidth="130" styleClass="default" text="Taxis">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/gsis.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btnMypos" onMouseClicked="#myposClick" prefWidth="130" styleClass="default" text="myPOS">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/mypos1.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btnSimply" onMouseClicked="#simplyClick" prefWidth="130" styleClass="default" text="Simply">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/simply1.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btnEmblem" onMouseClicked="#emblemClick" prefWidth="130" styleClass="default" text="Emblem">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/emblem.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btnErgani" onMouseClicked="#erganiClick" prefWidth="140.0" styleClass="default" text="Ergani">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/ergani.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btnAnydesk" onMouseClicked="#anydeskClick" prefWidth="140.0" styleClass="default" text="Anydesk">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/anydesk.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btnData" onAction="#folderClick" prefWidth="140.0" styleClass="default" text="Data">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/folder.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="openFileButton" prefWidth="140.0" styleClass="default" text="My Files">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@icons/document.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

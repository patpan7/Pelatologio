<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="900.0" prefWidth="1200.0" styleClass="pane" stylesheets="@external.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.easytech.pelatologio.PartnerEarningsController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label styleClass="normal-label" text="Συνεργάτης:">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="partnerFilterComboBox" prefWidth="200.0"/>
                        <Label styleClass="normal-label" text="Τιμολόγιο:">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="invoiceStatusFilterComboBox" prefWidth="150.0"/>
                        <Label styleClass="normal-label" text="Πληρωμή:">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="paymentStatusFilterComboBox" prefWidth="150.0"/>
                        <JFXButton onAction="#handleClearFilters" styleClass="click-button" text="Εκκαθάριση Φίλτρων">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </JFXButton>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <JFXButton onAction="#handleMarkInvoiceReceived" styleClass="click-button"
                                   text="Τιμολόγιο Ελήφθη"/>
                        <JFXButton onAction="#handleMarkPaid" styleClass="click-button" text="Πληρωμένο"/>
                        <JFXButton onAction="#handleCalculateCommissions" styleClass="click-button"
                                   text="Υπολογισμός Προμηθειών"/>
                        <JFXButton onAction="#handleGenerateStatement" styleClass="click-button"
                                   text="Δημιουργία Καρτέλας"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label styleClass="normal-label" text="Σύνολο Οφειλών:"/>
                        <Label fx:id="totalEarningsLabel" styleClass="normal-label" text="0.00€"/>
                        <Label styleClass="normal-label" text="Σύνολο Ανεξόφλητων:"/>
                        <Label fx:id="totalUnpaidLabel" styleClass="normal-label" text="0.00€"/>
                        <Label styleClass="normal-label" text="Σύνολο Πληρωμένων:"/>
                        <Label fx:id="totalPaidLabel" styleClass="normal-label" text="0.00€"/>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="earningsTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="partnerColumn" prefWidth="150.0" text="Συνεργάτης"/>
                <TableColumn fx:id="customerColumn" prefWidth="150.0" text="Πελάτης"/>
                <TableColumn fx:id="supplierColumn" prefWidth="150.0" text="Προμηθευτής"/>
                <TableColumn fx:id="earningDateColumn" prefWidth="120.0" text="Ημ/νία Υπολογισμού"/>
                <TableColumn fx:id="earningAmountColumn" prefWidth="100.0" text="Ποσό Οφειλής"/>
                <TableColumn fx:id="invoiceStatusColumn" prefWidth="120.0" text="Κατάσταση Τιμολογίου"/>
                <TableColumn fx:id="invoiceRefColumn" prefWidth="120.0" text="Αρ. Τιμολογίου"/>
                <TableColumn fx:id="paymentStatusColumn" prefWidth="120.0" text="Κατάσταση Πληρωμής"/>
                <TableColumn fx:id="paymentDateColumn" prefWidth="120.0" text="Ημ/νία Πληρωμής"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>

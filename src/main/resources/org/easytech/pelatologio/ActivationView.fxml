<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.ActivationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Ενεργοποίηση Εφαρμογής">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <HBox alignment="CENTER" spacing="5.0">
        <Label text="Hardware ID:" />
        <TextField fx:id="tfHardwareId" editable="false" prefWidth="250.0" />
        <Button onAction="#handleCopyHardwareId" text="Αντιγραφή" />
    </HBox>
    <TextField fx:id="tfActivationCode" promptText="Κωδικός Ενεργοποίησης" />
    <TextField fx:id="tfSecretKey" promptText="Μυστικό Κλειδί Εφαρμογής" />
    <Button fx:id="btnActivate" onAction="#handleActivate" text="Ενεργοποίηση" />
    <Label fx:id="lblStatus" textFill="RED" />
</VBox>

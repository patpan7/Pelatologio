<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.PartnerEarningStatementDialogController">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label styleClass="title-label" text="Αναφορά Οφειλών Συνεργάτη" />
            <TextArea fx:id="statementTextArea" editable="false" prefHeight="400.0" prefWidth="600.0" wrapText="true" />
            <Button onAction="#handleCopy" styleClass="accent" text="Αντιγραφή">
                <graphic>
                    <FontAwesomeIcon glyphName="COPY" />
                </graphic>
            </Button>
            <Button onAction="#handleClose" styleClass="default" text="Κλείσιμο">
                <graphic>
                    <FontAwesomeIcon glyphName="TIMES" />
                </graphic>
            </Button>
        </VBox>
    </content>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</DialogPane>

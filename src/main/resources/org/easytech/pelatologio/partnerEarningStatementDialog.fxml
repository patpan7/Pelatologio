<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.PartnerEarningStatementDialogController">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Αναφορά Οφειλών Συνεργάτη" styleClass="header-label" />
            <TextArea fx:id="statementTextArea" editable="false" prefHeight="400.0" prefWidth="600.0" wrapText="true" />
            <Button onAction="#handleCopy" text="Αντιγραφή" />
            <Button onAction="#handleClose" text="Κλείσιμο" />
        </VBox>
    </content>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER"   xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.TaxisViewController">
    <HBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER"  HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </HBox.margin>
            <TableView fx:id="loginTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="usernameColumn" text="Username"/>
                    <TableColumn fx:id="passwordColumn" text="Password"/>
                    <TableColumn fx:id="tagColumn" text="Tag"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefWidth="277.0"
                     text="Προσθήκη Νέου Login">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="editButton" onAction="#handleEditLogin" prefWidth="277.0"
                     text="Επεξεργασία">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefWidth="277.0"
                     text="Διαγραφή">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
        <VBox alignment="TOP_CENTER"  HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </HBox.margin>
            <Button fx:id="btnTaxis" mnemonicParsing="false" onMouseClicked="#taxisOpen"
                    prefWidth="277.0"  text="TaxisNet">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="btnAuthorizations" mnemonicParsing="false"
                    onAction="#authorizationsOpen" prefWidth="277.0" 
                    text="Εξουσιοδότηση ΑΑΔΕ">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="btnMyData" mnemonicParsing="false" onAction="#mydataOpen"
                    prefWidth="277.0"  text="myDATA">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="btnESend" mnemonicParsing="false" onAction="#esendOpen"
                    prefWidth="277.0"  text="eSend">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="btnAfm1" lineSpacing="1.0" mnemonicParsing="false"
                    onAction="#afm1Open" prefWidth="277.0"  text="Ανεύρεσης ΑΦΜ"
                    textOverrun="CLIP">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="btnAfm2" mnemonicParsing="false" onAction="#afm2Open"
                    prefWidth="277.0"  text="Ειδικοί Κωδικοί">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="btnTameiakes" mnemonicParsing="false" onAction="#tameiakesOpen"
                    prefWidth="277.0"  text="Ταμειακές">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="btnGemi" mnemonicParsing="false" onAction="#gemiSearch"
                    prefWidth="277.0"  text="ΓΕΜΗ">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </HBox>
</VBox>

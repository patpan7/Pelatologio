<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.TaxisViewController">
    <HBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <Label styleClass="title-label" text="Διαχείριση Taxis" />
            <TableView fx:id="loginTable" styleClass="striped" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="usernameColumn" text="Username" />
                    <TableColumn fx:id="passwordColumn" text="Password" />
                    <TableColumn fx:id="tagColumn" text="Tag" />
                </columns>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem onAction="#handleEditLogin" text="Επεξεργασία">
                                <graphic>
                                    <FontAwesomeIcon glyphName="PENCIL" />
                                </graphic>
                            </MenuItem>
                            <MenuItem mnemonicParsing="false" onAction="#handleAddLogin" text="Προσθήκη">
                                <graphic>
                                    <FontAwesomeIcon glyphName="PLUS" />
                                </graphic>
                            </MenuItem>
                            <MenuItem mnemonicParsing="false" onAction="#handleDeleteLogin" text="Διαγραφή">
                                <graphic>
                                    <FontAwesomeIcon glyphName="TRASH" />
                                </graphic>
                            </MenuItem>
                        </items>
                    </ContextMenu>
                </contextMenu>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefWidth="277.0" styleClass="accent" text="Προσθήκη Login">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="editButton" onAction="#handleEditLogin" prefWidth="277.0" styleClass="success" text="Επεξεργασία">
                <graphic>
                    <FontAwesomeIcon glyphName="PENCIL" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefWidth="277.0" styleClass="danger" text="Διαγραφή">
                <graphic>
                    <FontAwesomeIcon glyphName="TRASH" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
        </VBox>
        <VBox alignment="TOP_CENTER" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </HBox.margin>
            <Button fx:id="btnTaxis" mnemonicParsing="false" onMouseClicked="#taxisOpen" prefWidth="277.0" styleClass="default" text="TaxisNet">
                <graphic>
                    <FontAwesomeIcon glyphName="EXTERNAL_LINK" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button fx:id="btnAuthorizations" mnemonicParsing="false" onAction="#authorizationsOpen" prefWidth="277.0" styleClass="default" text="Εξουσιοδότηση ΑΑΔΕ">
                <graphic>
                    <FontAwesomeIcon glyphName="LOCK" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="btnMyData" mnemonicParsing="false" onAction="#mydataOpen" prefWidth="277.0" styleClass="default" text="myDATA">
                <graphic>
                    <FontAwesomeIcon glyphName="DATABASE" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="btnESend" mnemonicParsing="false" onAction="#esendOpen" prefWidth="277.0" styleClass="default" text="eSend">
                <graphic>
                    <FontAwesomeIcon glyphName="PAPER_PLANE" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="btnAfm1" lineSpacing="1.0" mnemonicParsing="false" onAction="#afm1Open" prefWidth="277.0" styleClass="default" text="Ανεύρεσης ΑΦΜ" textOverrun="CLIP">
                <graphic>
                    <FontAwesomeIcon glyphName="SEARCH" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="btnAfm2" mnemonicParsing="false" onAction="#afm2Open" prefWidth="277.0" styleClass="default" text="Ειδικοί Κωδικοί">
                <graphic>
                    <FontAwesomeIcon glyphName="KEY" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="btnTameiakes" mnemonicParsing="false" onAction="#tameiakesOpen" prefWidth="277.0" styleClass="default" text="Ταμειακές">
                <graphic>
                    <FontAwesomeIcon glyphName="SHEKEL" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="btnGemi" mnemonicParsing="false" onAction="#gemiSearch" prefWidth="277.0" styleClass="default" text="ΓΕΜΗ">
                <graphic>
                    <FontAwesomeIcon glyphName="BUILDING" />
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0" styleClass="border-pane" stylesheets="@external.css"
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.easytech.pelatologio.OrdersListController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" styleClass="pane">
        <BorderPane fx:id="rootPane" styleClass="pane" StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="normal-label" text="Φίλτρα:">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <JFXCheckBox fx:id="showAllCheckbox" selected="true" styleClass="normal-label" text="Όλες">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="showCompletedCheckbox" styleClass="normal-label" text="Ολοκληρωμένες">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="showPendingCheckbox" styleClass="normal-label" text="Εκκρεμείς">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <Separator layoutX="778.0" layoutY="10.0" orientation="VERTICAL"/>
                        <JFXCheckBox fx:id="showErgentCheckBox" styleClass="normal-label" text="Επείγων">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="showWaitCheckBox" layoutX="644.0" layoutY="20.0" styleClass="normal-label"
                                     text="Μόνο Αναμονή">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <Separator HBox.hgrow="ALWAYS"/>
                        <JFXButton fx:id="btnRefresh" buttonType="RAISED" mnemonicParsing="false"
                                   onMouseClicked="#refresh" styleClass="click-button" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/refresh.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </JFXButton>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </VBox.margin>
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <JFXCheckBox fx:id="showWithCustomerCheckbox" styleClass="normal-label" text="Με πελάτη">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="showWithoutCustomerCheckbox" styleClass="normal-label" text="Χωρίς πελάτη">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <Separator layoutX="778.0" layoutY="10.0" orientation="VERTICAL"/>
                        <JFXCheckBox fx:id="showWithSupplierCheckbox" styleClass="normal-label" text="Με προμηθευτή">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="showWithoutSupplierCheckbox" styleClass="normal-label" text="Χωρίς προμηθευτή">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                        <Separator orientation="VERTICAL"/>
                        <ComboBox fx:id="supplierFilterComboBox" editable="true" prefHeight="51.0" prefWidth="344.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </ComboBox>
                    </HBox>
                    <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="titleColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0"
                                         text="Τίτλος"/>
                            <TableColumn fx:id="descriptionColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0"
                                         text="Περιγραφή"/>
                            <TableColumn fx:id="dueDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0"
                                         text="Ημερομηνία"/>
                            <TableColumn fx:id="customerColumn" minWidth="230.0" prefWidth="230.0" text="Πελάτης"/>
                            <TableColumn fx:id="supplierColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                         text="Προμηθευτής"/>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditOrder" styleClass="menu-item" text="Επεξεργασία" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddOrder" styleClass="menu-item" text="Προσθήκη" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleDeleteOrder" styleClass="menu-item" text="Διαγραφή" />
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#toggleComplete" styleClass="menu-item" text="Ολοκλήρωση" />
                                    <MenuItem mnemonicParsing="false" onAction="#toggleRecall" styleClass="menu-item" text="Ανάκληση" />
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                    <JFXButton fx:id="completeOrderButton" buttonType="RAISED" mnemonicParsing="false" prefWidth="230.0"
                               styleClass="click-button" text="Ολοκλήρωση">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/complete.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </JFXButton>
                    <JFXButton fx:id="uncompletedOrderButton" buttonType="RAISED" mnemonicParsing="false"
                               prefWidth="230.0" styleClass="click-button" text="Ανάκληση">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/pending.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </JFXButton>
                    <Separator visible="false" HBox.hgrow="ALWAYS"/>
                    <JFXButton fx:id="addOrderButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button"
                               text="Προσθήκη">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/add.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </JFXButton>
                    <JFXButton fx:id="editOrderButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button"
                               text="Επεξεργασία">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/edit.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </JFXButton>
                    <JFXButton fx:id="deleteOrderButton" buttonType="RAISED" prefWidth="220.0" styleClass="click-button"
                               text="Διαγραφή">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/remove.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </JFXButton>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

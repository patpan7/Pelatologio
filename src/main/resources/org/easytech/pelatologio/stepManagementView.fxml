<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.StepManagementController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Επιλογή Εφαρμογής:" />
                <ComboBox fx:id="applicationComboBox" prefWidth="250.0" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="stepsTable" editable="true" styleClass="striped">
            <columns>
                <TableColumn fx:id="orderColumn" prefWidth="100.0" text="Σειρά" />
                <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Όνομα Βήματος" />
                <TableColumn fx:id="actionTypeColumn" prefWidth="200.0" text="Τύπος Ενέργειας" />
                <TableColumn fx:id="actionConfigColumn" prefWidth="100.0" text="JSON Config" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button onAction="#handleAddStep" styleClass="accent" text="Προσθήκη Νέου Βήματος">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
            </Button>
            <Button onAction="#handleDeleteStep" styleClass="danger" text="Διαγραφή Επιλεγμένου">
                <graphic>
                    <FontAwesomeIcon glyphName="TRASH" />
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>

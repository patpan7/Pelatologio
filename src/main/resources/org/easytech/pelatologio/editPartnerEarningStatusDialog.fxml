<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane expanded="true" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.EditPartnerEarningStatusDialogController">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
                <Label text="Κατάσταση Τιμολογίου:" GridPane.rowIndex="0" />
                <ComboBox fx:id="invoiceStatusComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Κατάσταση Πληρωμής:" GridPane.rowIndex="1" />
                <ComboBox fx:id="paymentStatusComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Ημερομηνία Πληρωμής:" GridPane.rowIndex="2" />
                <DatePicker fx:id="paymentDatePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Αρ. Τιμολογίου Συνεργάτη:" GridPane.rowIndex="3" />
                <TextField fx:id="invoiceRefField" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="okButton" onAction="#handleOkAction" styleClass="accent" text="OK" />
                <Button fx:id="cancelButton" onAction="#handleCancelAction" styleClass="default" text="Cancel" />
            </HBox>
        </VBox>
    </content>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</DialogPane>

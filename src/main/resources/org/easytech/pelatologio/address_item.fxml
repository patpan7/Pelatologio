<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox stylesheets="@external.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea">
    <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>

        <Label prefWidth="205.0" styleClass="normal-label" text="Διεύθυνση:">
            <font>
                <Font size="24.0" />
            </font>
            <padding>
                <Insets right="20.0" />
            </padding>
        </Label>
        <TextField fx:id="tfAddress" HBox.hgrow="ALWAYS">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
        <Button fx:id="btnAddressAdd" mnemonicParsing="false" styleClass="click-button">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/remove.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets left="5.0" />
            </HBox.margin>
        </Button>
    </HBox>
    <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>

        <Label prefWidth="205.0" styleClass="normal-label" text="Πόλη:">
            <font>
                <Font size="24.0" />
            </font>
            <padding>
                <Insets right="20.0" />
            </padding>
        </Label>
        <TextField fx:id="tfTown" HBox.hgrow="ALWAYS">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
        <Label layoutX="10.0" layoutY="18.0" styleClass="normal-label" text="T.K.:">
            <font>
                <Font size="24.0" />
            </font>
            <padding>
                <Insets left="20.0" right="10.0" />
            </padding>
        </Label>
        <TextField fx:id="tfPosCode" layoutX="215.0" layoutY="10.0" prefHeight="51.0" prefWidth="131.0">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
    </HBox>
</VBox>

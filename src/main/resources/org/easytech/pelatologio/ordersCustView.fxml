<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER"   xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerOrdersController">
    <VBox alignment="TOP_CENTER"  HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </HBox.margin>
        <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID"/>
                <TableColumn fx:id="titleColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0" text="Τίτλος"/>
                <TableColumn fx:id="descriptionColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0"
                             text="Περιγραφή"/>
                <TableColumn fx:id="dueDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0"
                             text="Ημερομηνία"/>
                <TableColumn fx:id="customerColumn" minWidth="230.0" prefWidth="230.0" text="Πελάτης"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditOrder"  text="Επεξεργασία"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddOrder" 
                                  text="Προσθήκη"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteOrder" 
                                  text="Διαγραφή"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" onAction="#toggleComplete" 
                                  text="Ολοκλήρωση"/>
                        <MenuItem mnemonicParsing="false" onAction="#toggleRecall" 
                                  text="Ανάκληση"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="completeOrderButton" mnemonicParsing="false" prefWidth="230.0"
                     text="Ολοκλήρωση">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/complete.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Button fx:id="uncompletedOrderButton" mnemonicParsing="false" prefWidth="230.0"
                     text="Ανάκληση">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/pending.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Separator visible="false" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addOrderButton" prefWidth="220.0" 
                    text="Προσθήκη">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/add.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Button fx:id="editOrderButton" prefWidth="220.0" 
                    text="Επεξεργασία">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/edit.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Button fx:id="deleteOrderButton" prefWidth="220.0" 
                    text="Διαγραφή">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/remove.png"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </VBox.margin>
        </HBox>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </VBox.margin>
    </VBox>
</VBox>

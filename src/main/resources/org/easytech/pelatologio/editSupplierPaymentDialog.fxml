<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.EditSupplierPaymentDialogController">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <GridPane hgap="10.0" vgap="10.0">
                <children>
                    <Label text="Πελάτης:" GridPane.rowIndex="0" />
                    <ComboBox fx:id="customerComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Ημερομηνία Πληρωμής:" GridPane.rowIndex="1" />
                    <DatePicker fx:id="paymentDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Ποσό:" GridPane.rowIndex="2" />
                    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Περιγραφή:" GridPane.rowIndex="3" />
                    <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
            </GridPane>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType text="OK" buttonData="OK_DONE" />
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE" />
    </buttonTypes>
</DialogPane>

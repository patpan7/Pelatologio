<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane expanded="true"   xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.easytech.pelatologio.EditSupplierPaymentDialogController">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <GridPane hgap="10.0" vgap="10.0">
                <Label prefWidth="140.0" text="Ημερομηνία Πληρωμής:" wrapText="true"
                       GridPane.rowIndex="1"/>
                <DatePicker fx:id="paymentDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Ποσό:" GridPane.rowIndex="2"/>
                <TextField fx:id="amountField" prefWidth="325.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Περιγραφή:" GridPane.rowIndex="3"/>
                <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
            <Label text="Πελάτες:"/>
            <TableView fx:id="allocationsTable" editable="true" prefHeight="320.0" VBox.vgrow="NEVER">
                <columns>
                    <TableColumn fx:id="customerNameColumn" prefWidth="380.0" text="Πελάτης"/>
                    <TableColumn fx:id="allocatedColumn" prefWidth="160.0" text="Ποσό πληρωμής"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <Label style="-fx-font-style: italic; -fx-font-size: 11;"
                   text="Σημείωση: Άφησε κενό ή 0 για πελάτες χωρίς ποσό."/>
        </VBox>
    </content>
    <ButtonType buttonData="OK_DONE" text="OK"/>
    <ButtonType buttonData="CANCEL_CLOSE" text="Cancel"/>
</DialogPane>


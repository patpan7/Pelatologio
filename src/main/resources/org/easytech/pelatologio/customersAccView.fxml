<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerAccViewController">
    <HBox alignment="TOP_CENTER" styleClass="card" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </HBox.margin>
            <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" minWidth="120.0" prefWidth="120.0" resizable="true" sortable="false"
                                 text="Όνομα"/>
                    <TableColumn fx:id="titleColumn" maxWidth="200.0" minWidth="100.0" prefWidth="100.0"
                                 resizable="true" sortable="false" text="Τίτλος"/>
                    <TableColumn fx:id="afmColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" resizable="true"
                                 sortable="false" text="ΑΦΜ"/>
                    <TableColumn fx:id="phone1Column" maxWidth="120.0" minWidth="120.0" prefWidth="120.0"
                                 sortable="false" text="Τηλέφωνο 1"/>
                    <TableColumn fx:id="phone2Column" maxWidth="120.0" minWidth="120.0" prefWidth="120.0"
                                 sortable="false" text="Τηλέφωνο 2"/>
                    <TableColumn fx:id="mobileColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0"
                                 sortable="false" text="Κινητό"/>
                    <TableColumn fx:id="townColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" resizable="true"
                                 sortable="false" text="Πόλη"/>
                    <TableColumn fx:id="emailColumn" resizable="true" sortable="false" text="E-mail"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
</VBox>

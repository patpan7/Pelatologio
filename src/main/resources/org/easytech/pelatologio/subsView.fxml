<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.SubsViewController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
        <BorderPane fx:id="rootPane" StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="title-label" text="Από:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="dateFrom" prefWidth="180.0" />
                        <Label styleClass="title-label" text="Έως:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="dateTo" />
                        <Separator orientation="VERTICAL">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Separator>
                        <Label text="Κατηγορία:" />
                        <ComboBox fx:id="categoryFilterComboBox" editable="true">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </ComboBox>
                        <Button fx:id="addCategoryButton" mnemonicParsing="false" styleClass="accent" text="Προσθήκη κατηγορίας">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                    </HBox>
                    <TableView fx:id="subsTable" styleClass="striped" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" maxWidth="50" minWidth="50" prefWidth="50" text="ID" />
                            <TableColumn fx:id="titleColumn" text="Τίτλος" />
                            <TableColumn fx:id="endDateColumn" text="Ημερ. Λήξης" />
                            <TableColumn fx:id="customerColumn" text="Πελάτης" />
                            <TableColumn fx:id="categoryColumn" text="Κατηγορία" />
                            <TableColumn fx:id="priceColumn" text="Τιμή" />
                            <TableColumn fx:id="sendedColumn" text="E-mail?" />
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem mnemonicParsing="false" onAction="#handleSendMail" text="Αποστολή E-mail">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="ENVELOPE" />
                                        </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" onAction="#handleCopy" text="Αντιγραφή">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="COPY" />
                                        </graphic>
                                    </MenuItem>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                    <Button fx:id="renewButton" mnemonicParsing="false" prefWidth="230.0" styleClass="accent" text="Ανανέωση">
                        <graphic>
                            <FontAwesomeIcon glyphName="RECYCLE" />
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <Separator visible="false" HBox.hgrow="ALWAYS" />
                    <Button fx:id="addSubButton" prefWidth="220.0" styleClass="accent" text="Προσθήκη">
                        <graphic>
                            <FontAwesomeIcon glyphName="PLUS" />
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="editSubButton" prefWidth="220.0" styleClass="success" text="Επεξεργασία">
                        <graphic>
                            <FontAwesomeIcon glyphName="PENCIL" />
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="deleteSubButton" prefWidth="220.0" styleClass="danger" text="Διαγραφή">
                        <graphic>
                            <FontAwesomeIcon glyphName="TRASH" />
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

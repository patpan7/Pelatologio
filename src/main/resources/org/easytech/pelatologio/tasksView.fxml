<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.TaskListController">
    <BorderPane minHeight="800.0" minWidth="1200.0" styleClass="pane" stylesheets="@external.css">
        <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </BorderPane.margin>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label styleClass="header-label" text="Πελατολόγιο -  Εργασίες" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="38.0" />
                        </font>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <opaqueInsets>
                        <Insets right="20.0" />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <Button mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button" text="Επιστροφή">
                        <graphic>
                            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/menu.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                </HBox>
            </HBox>
        </top>
        <center>
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="normal-label" text="Φίλτρα:">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></Label>
                    <CheckBox fx:id="showAllCheckbox" selected="true" styleClass="normal-label" text="Όλες">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
                    <CheckBox fx:id="showCompletedCheckbox" styleClass="normal-label" text="Ολοκληρωμένες">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
                    <CheckBox fx:id="showPendingCheckbox" styleClass="normal-label" text="Εκκρεμείς">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
               <Separator orientation="VERTICAL" />
                    <CheckBox fx:id="showWithCustomerCheckbox" styleClass="normal-label" text="Με πελάτη">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
                    <CheckBox fx:id="showWithoutCustomerCheckbox" styleClass="normal-label" text="Χωρίς πελάτη">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></CheckBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </HBox>

                <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100" text="ID" />
                        <TableColumn fx:id="titleColumn" maxWidth="520.0" minWidth="260.0" prefWidth="260.0" text="Τίτλος" />
                        <TableColumn fx:id="descriptionColumn" maxWidth="800.0" minWidth="400.0" prefWidth="400.0" text="Περιγραφή" />
                        <TableColumn fx:id="dueDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0" text="Ημερομηνία" />
                        <TableColumn fx:id="customerColumn" minWidth="320.0" prefWidth="320.0" text="Πελάτης" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </VBox>

        </center>
      <bottom>

             <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                 <Button fx:id="completeTaskButton" prefWidth="200.0" styleClass="click-button" text="Ολοκλήρωση" />
                 <Button fx:id="uncompletedTaskButton" prefWidth="200.0" styleClass="click-button" text="Ανάκληση" />
            <Separator prefWidth="200.0" visible="false" HBox.hgrow="ALWAYS" />
                 <Button fx:id="addTaskButton" prefWidth="170.0" styleClass="click-button" text="Προσθήκη" />
                 <Button fx:id="editTaskButton" prefWidth="170.0" styleClass="click-button" text="Επεξεργασία" />
                 <Button fx:id="deleteTaskButton" prefWidth="170.0" styleClass="click-button" text="Διαγραφή" />
            <BorderPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
             </HBox>
      </bottom>
    </BorderPane>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.calendarfx.view.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CalendarController">
    <children>
        <BorderPane minHeight="800.0" minWidth="1200.0" styleClass="pane">
            <top>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </BorderPane.margin>
                    <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Label styleClass="header-label" text="Πελατολόγιο - Ημερολόγιο" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="38.0" />
                            </font>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Label>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <opaqueInsets>
                            <Insets right="20.0" />
                        </opaqueInsets>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <Button mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button" text="Επιστροφή">
                            <graphic>
                                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/menu.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>
                    </HBox>
                </HBox>
            </top>

            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true">
               <VBox alignment="TOP_CENTER">
                  <children>
                     <HBox alignment="TOP_CENTER">
                        <children>
                           <Button mnemonicParsing="false" onAction="#calendarManager" text="Διαχείριση Ημερολογίων" />
                        </children>
                     </HBox>
                          <CalendarView fx:id="calendarView" enableHyperlinks="false" selectionMode="SINGLE" showAddCalendarButton="false" showPrintButton="false" suspendUpdates="true" />
                  </children>
               </VBox>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</StackPane>

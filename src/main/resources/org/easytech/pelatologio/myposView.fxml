<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<HBox alignment="TOP_CENTER"   stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.MyposViewController">
    <VBox alignment="TOP_CENTER"  HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </HBox.margin>
        <TableView fx:id="loginTable" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username"/>
                <TableColumn fx:id="passwordColumn" text="Password"/>
                <TableColumn fx:id="tagColumn" text="Tag"/>
                <TableColumn fx:id="phoneColumn" text="Τηλέφωνο"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditLogin" text="Επεξεργασία"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddLogin"
                                  text="Προσθήκη"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteLogin"
                                  text="Διαγραφή"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" onAction="#handleLabel"
                                  text="Ετικέτα"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleCopy"
                                  text="Αντιγραφή Login"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask"
                                  text="Προσθήκη εργασίας"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefWidth="277.0"
                text="Προσθήκη Νέου Login">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="editButton" onAction="#handleEditLogin" prefWidth="277.0"
                text="Επεξεργασία">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefWidth="277.0"
                text="Διαγραφή">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <VBox alignment="TOP_CENTER"  HBox.hgrow="NEVER">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </HBox.margin>
        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#myposloginOpen"
                prefWidth="277.0" text="Σύνδεση myPOS">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="btnRegister" mnemonicParsing="false" onMouseClicked="#myposregisterOpen"
                prefWidth="277.0" text="Εγγραφή myPOS">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <VBox alignment="TOP_CENTER"  HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </HBox.margin>
            <Label text="myPOS Accounts"/>
            <TableView fx:id="myposDetailsTable" editable="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="clientIdColumn" prefWidth="150.0" text="Client ID"/>
                    <TableColumn fx:id="verificationStatusColumn" prefWidth="150.0" text="Verification"/>
                    <TableColumn fx:id="accountStatusColumn" prefWidth="150.0" text="Account Status"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleDelete" text="Delete"/>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <children>
                    <Button onAction="#handleAdd" text="Add New Account"/>
                </children>
            </HBox>
        </VBox>
    </VBox>
</HBox>
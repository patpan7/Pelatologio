<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane prefHeight="800.0" prefWidth="1100.0" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.MyposViewController">
    <content>
        <VBox alignment="TOP_CENTER">
            <Label fx:id="customerLabel" styleClass="header-label" text="Όνομα Πελάτη: [Όνομα Πελάτη]" textOverrun="CLIP" />
            <HBox alignment="TOP_CENTER">
                <children>
                    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                        <children>
                            <!-- Πίνακας για τα Logins -->
                            <TableView fx:id="loginTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="usernameColumn" text="Username" />
                                    <TableColumn fx:id="passwordColumn" text="Password" />
                                    <TableColumn fx:id="tagColumn" text="Tag" />
                                    <TableColumn fx:id="phoneColumn" text="Τηλέφωνο" />
                                </columns>
                        <columnResizePolicy>
                           <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                            </TableView>

                            <!-- Κουμπί για προσθήκη νέου login -->
                            <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefHeight="55.0" prefWidth="277.0" styleClass="click-button" text="Προσθήκη Νέου Login">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </VBox.margin>
                            </Button>
                            <Button fx:id="editButton" onAction="#handleEditLogin" prefHeight="55.0" prefWidth="277.0" styleClass="click-button" text="Επεξεργασία">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </VBox.margin>
                            </Button>
                            <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefHeight="55.0" prefWidth="277.0" styleClass="click-button" text="Διαγραφή">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </VBox.margin>
                            </Button>
                        </children>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
                    </VBox>
                    <!-- Λίστα με κουμπιά για άλλες εργασίες -->
                    <VBox alignment="TOP_CENTER">
                        <children>
                            <Button fx:id="btnLogin"  maxWidth="277.0" mnemonicParsing="false" onAction="#myposloginOpen" prefHeight="55.0" styleClass="click-button" text="Σύνδεση myPOS">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </VBox.margin>
                            </Button>
                            <Button fx:id="btnRegister" mnemonicParsing="false" onMouseClicked="#myposregisterOpen" prefHeight="55.0" prefWidth="277.0" styleClass="click-button" text="Εγγραφή myPOS">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </VBox.margin>
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                            </Button>
                        </children>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
                    </VBox>
                </children>
            </HBox>

        </VBox>
    </content>
</DialogPane>

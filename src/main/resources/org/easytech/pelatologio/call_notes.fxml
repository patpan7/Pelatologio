<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.helper.CallNotesController">
    <Label fx:id="lbCustomer" layoutX="20.0" layoutY="20.0" style="-fx-font-weight: bold;"
           text="Πελάτης: "/>
    <Label style="-fx-font-weight: bold;" text="Σημειώσεις Κλήσης"/>
    <HBox fx:id="manualCallTypeBox" spacing="10" visible="false">
        <RadioButton fx:id="incomingRadio" text="Εισερχόμενη"/>
        <RadioButton fx:id="outgoingRadio" text="Εξερχόμενη"/>
    </HBox>
    <TextArea fx:id="notesTextArea" wrapText="true" VBox.vgrow="ALWAYS"/>
    <HBox spacing="10">
        <Label style="-fx-font-weight: bold;" text="Προσθήκη:"/>
        <CheckBox fx:id="createTaskCheckBox" text="Εργασία"/>
        <CheckBox fx:id="createOfferCheckBox" text="Προσφορά"/>
        <CheckBox fx:id="createOrderCheckBox" text="Παραγγελία"/>
    </HBox>
    <Button fx:id="saveAndEndCallButton" onAction="#handleSaveAndEndCall"
            text="Αποθήκευση και Τερματισμός Κλήσης"/>
</VBox>

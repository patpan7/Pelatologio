<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@custom-atlantafx.css"
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.easytech.pelatologio.SuppliersViewController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
        <BorderPane fx:id="rootPane" StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="title-label" text="Αναζήτηση">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="filterField" prefWidth="300.0" promptText="Αναζήτηση..."/>
                        <Button mnemonicParsing="false" onAction="#supplierAddNew"
                                styleClass="accent" text="Προσθήκη Νέου Προμηθευτή">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnClean" mnemonicParsing="false" onMouseClicked="#clean"
                                styleClass="danger" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/clean.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                        <Separator HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnRefresh" mnemonicParsing="false"
                                onMouseClicked="#refresh" styleClass="default" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/refresh.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <TableView fx:id="supplierTable" styleClass="striped" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nameColumn" minWidth="120.0" prefWidth="120.0" resizable="true" sortable="false" text="Όνομα"/>
                            <TableColumn fx:id="phoneColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" text="Τηλέφωνο"/>
                            <TableColumn fx:id="mobileColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" text="Κινητό"/>
                            <TableColumn fx:id="emailColumn" resizable="true" sortable="false" text="E-mail"/>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditOption" text="Επεξεργασία">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="PENCIL" />
                                        </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" onAction="#supplierAddNew" text="Προσθήκη">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="PLUS" />
                                        </graphic>
                                    </MenuItem>
                                    <SeparatorMenuItem/>
                                    <MenuItem mnemonicParsing="false" onAction="#viberOpen" text="Επικοινωνία Viber">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="COMMENT" />
                                        </graphic>
                                    </MenuItem>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </center>
        </BorderPane>
    </ScrollPane>
</StackPane>


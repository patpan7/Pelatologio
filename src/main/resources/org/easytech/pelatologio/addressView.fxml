<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.AddressViewController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <Label fx:id="customerLabel" styleClass="title-label" text="Όνομα Πελάτη: [Όνομα Πελάτη]" textOverrun="CLIP">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TableView fx:id="addressTable" styleClass="striped" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="addressColumn" text="Διεύθηνση" />
                    <TableColumn fx:id="townColumn" text="Πόλη" />
                    <TableColumn fx:id="postcodeColumn" text="Τ.Κ." />
                    <TableColumn fx:id="storeColumn" text="Υποκατάστημα" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Button fx:id="addLoginButton" onAction="#handleAddLogin" styleClass="accent" text="Προσθήκη">
                    <graphic>
                        <FontAwesomeIcon glyphName="PLUS" />
                    </graphic>
                </Button>
                <Button fx:id="editButton" onAction="#handleEditLogin" styleClass="success" text="Επεξεργασία">
                    <graphic>
                        <FontAwesomeIcon glyphName="PENCIL" />
                    </graphic>
                </Button>
                <Button fx:id="deleteButton" onAction="#handleDeleteLogin" styleClass="danger" text="Διαγραφή">
                    <graphic>
                        <FontAwesomeIcon glyphName="TRASH" />
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </content>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane prefHeight="800.0" prefWidth="1100.0"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.easytech.pelatologio.AddressViewController">
    <content>
        <VBox alignment="TOP_CENTER">
            <Label fx:id="customerLabel" text="Όνομα Πελάτη: [Όνομα Πελάτη]"
                   textOverrun="CLIP"/>
            <TableView fx:id="addressTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="addressColumn" text="Διεύθηνση"/>
                    <TableColumn fx:id="townColumn" text="Πόλη"/>
                    <TableColumn fx:id="postcodeColumn" text="Τ.Κ."/>
                    <TableColumn fx:id="storeColumn" text="Υποκατάστημα"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <Button fx:id="addLoginButton" onAction="#handleAddLogin" prefHeight="55.0"
                    prefWidth="355.0" text="Προσθήκη υποκαταστήματος">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="editButton" onAction="#handleEditLogin" prefHeight="55.0"
                    prefWidth="355.0" text="Επεξεργασία">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDeleteLogin" prefHeight="55.0"
                    prefWidth="355.0"  text="Διαγραφή">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </content>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0"  
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.easytech.pelatologio.TaskListViewController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" >
        <BorderPane fx:id="rootPane"  StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label  text="Φίλτρα:">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <CheckBox fx:id="showAllCheckbox" selected="true"  text="Όλες">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="showCompletedCheckbox"  text="Ολοκληρωμένες">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="showPendingCheckbox"  text="Εκκρεμείς">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <Separator layoutX="778.0" layoutY="10.0" orientation="VERTICAL"/>
                        <CheckBox fx:id="showErgentCheckBox"  text="Επείγων">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="showWaitCheckBox" layoutX="644.0" layoutY="20.0" 
                                  text="Μόνο Αναμονή">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <Separator HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnRefresh" mnemonicParsing="false"
                                onMouseClicked="#refresh"  text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/refresh.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </VBox.margin>
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <CheckBox fx:id="showWithCustomerCheckbox"  text="Με πελάτη">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="showWithoutCustomerCheckbox"  text="Χωρίς πελάτη">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <Separator orientation="VERTICAL"/>
                        <Label  text="Κατηγορία:">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="categoryFilterComboBox" editable="true" prefHeight="51.0" prefWidth="344.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <Button fx:id="addCategoryButton" mnemonicParsing="false"
                                 text="Προσθήκη κατηγορίας">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="categoryColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"
                                         text="Κατηγορία"/>
                            <TableColumn fx:id="titleColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0"
                                         text="Τίτλος"/>
                            <TableColumn fx:id="descriptionColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0"
                                         text="Περιγραφή"/>
                            <TableColumn fx:id="dueDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0"
                                         text="Ημερομηνία"/>
                            <TableColumn fx:id="customerColumn" minWidth="230.0" prefWidth="230.0" text="Πελάτης"/>
                            <TableColumn fx:id="calendarColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0"
                                         text="Ημερ."/>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditTask"  text="Επεξεργασία"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddTask" 
                                              text="Προσθήκη"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleDeleteTask"
                                               text="Διαγραφή"/>
                                    <SeparatorMenuItem/>
                                    <MenuItem mnemonicParsing="false" onAction="#toggleComplete" 
                                              text="Ολοκλήρωση"/>
                                    <MenuItem mnemonicParsing="false" onAction="#toggleRecall" 
                                              text="Ανάκληση"/>
                                    <SeparatorMenuItem/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddOffer" 
                                              text="Δημιουργία Προσφοράς"/>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                    <Button fx:id="completeTaskButton" mnemonicParsing="false" prefWidth="230.0"
                             text="Ολοκλήρωση">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/complete.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="uncompletedTaskButton" mnemonicParsing="false"
                            prefWidth="230.0"  text="Ανάκληση">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/pending.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Separator visible="false" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="addTaskButton" prefWidth="220.0" 
                            text="Προσθήκη">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/add.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="editTaskButton" prefWidth="220.0" 
                            text="Επεξεργασία">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/edit.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="deleteTaskButton" prefWidth="220.0" 
                            text="Διαγραφή">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/remove.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

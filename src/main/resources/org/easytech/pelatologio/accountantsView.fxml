<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0"  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.AccountantsController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
        <BorderPane fx:id="rootPane"  StackPane.alignment="CENTER">
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                    <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                        <VBox.margin>
                            <Insets bottom="10.0" left="20.0" right="20.0" />
                        </VBox.margin>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Αναζήτηση">
                            <font>
                                <Font name="System Bold" size="30.0" />
                            </font>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <padding>
                                <Insets right="20.0" />
                            </padding>
                        </Label>
                        <TextField fx:id="filterField" prefWidth="300.0">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#accountantAddNew" text="Προσθήκη Νέου Λογιστή">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnClean" mnemonicParsing="false" onMouseClicked="#clean" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/clean.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                        <Separator HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Separator>
                        <Button fx:id="btnRefresh" mnemonicParsing="false" onMouseClicked="#refresh" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/refresh.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <TableView fx:id="accountantTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nameColumn" minWidth="120.0" prefWidth="120.0" resizable="true" sortable="false" text="Όνομα" />
                            <TableColumn fx:id="phoneColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" text="Τηλέφωνο" />
                            <TableColumn fx:id="mobileColumn" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" text="Κινητό" />
                            <TableColumn fx:id="emailColumn" resizable="true" sortable="false" text="E-mail" />
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem onAction="#handleEditOption"  text="Επεξεργασία" />
                                    <MenuItem mnemonicParsing="false" onAction="#accountantAddNew"  text="Προσθήκη" />
                                    <SeparatorMenuItem />
                                    <MenuItem mnemonicParsing="false" onAction="#viberOpen"  text="Επικοινωνία Viber" />
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </center>
        </BorderPane>
    </ScrollPane>
</StackPane>

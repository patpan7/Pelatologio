<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.EditCommissionDialogController">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <GridPane hgap="10.0" vgap="10.0" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
                <Label styleClass="normal-label" text="Συνεργάτης:" GridPane.rowIndex="0" />
                <ComboBox fx:id="partnerComboBox" maxWidth="400.0" minHeight="47.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label styleClass="normal-label" text="Πελάτης:" GridPane.rowIndex="1" />
                <ComboBox fx:id="customerComboBox" maxWidth="400.0" minHeight="47.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label styleClass="normal-label" text="Προμηθευτής:" GridPane.rowIndex="2" />
                <ComboBox fx:id="supplierComboBox" maxWidth="400.0" minHeight="47.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label styleClass="normal-label" text="Ποσοστό (%):" GridPane.rowIndex="3" />
                <TextField fx:id="rateField" maxWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label styleClass="normal-label" text="Ημ/νία Έναρξης:" GridPane.rowIndex="4" />
                <DatePicker fx:id="startDatePicker" maxWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label styleClass="normal-label" text="Ημ/νία Λήξης:" GridPane.rowIndex="5" />
                <DatePicker fx:id="endDatePicker" maxWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </GridPane>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="okButton" buttonData="OK_DONE" text="OK" />
        <ButtonType buttonData="CANCEL_CLOSE" text="Cancel" />
    </buttonTypes>
</DialogPane>

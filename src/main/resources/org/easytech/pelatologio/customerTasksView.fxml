<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" stylesheets="@custom-atlantafx.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerTasksController">
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <TableView fx:id="tasksTable" styleClass="striped" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0" text="Τίτλος" />
                <TableColumn fx:id="descriptionColumn" maxWidth="1.7976931348623157E308" minWidth="300.0" prefWidth="300.0" text="Περιγραφή" />
                <TableColumn fx:id="dueDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0" text="Ημερομηνία" />
                <TableColumn fx:id="categoryColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Κατηγορία" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditTask" text="Επεξεργασία">
                            <graphic>
                                <FontAwesomeIcon glyphName="PENCIL" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask" text="Προσθήκη">
                            <graphic>
                                <FontAwesomeIcon glyphName="PLUS" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteTask" text="Διαγραφή">
                            <graphic>
                                <FontAwesomeIcon glyphName="TRASH" />
                            </graphic>
                        </MenuItem>
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" onAction="#toggleComplete" text="Ολοκλήρωση">
                            <graphic>
                                <FontAwesomeIcon glyphName="CHECK" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#toggleRecall" text="Ανάκληση">
                            <graphic>
                                <FontAwesomeIcon glyphName="UNDO" />
                            </graphic>
                        </MenuItem>
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" onAction="#handleAddOffer" text="Δημιουργία Προσφοράς">
                            <graphic>
                                <FontAwesomeIcon glyphName="FILE_ALT" />
                            </graphic>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="completeTaskButton" mnemonicParsing="false" styleClass="accent" text="Ολοκλήρωση">
                <graphic>
                    <FontAwesomeIcon glyphName="CHECK" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="uncompletedTaskButton" mnemonicParsing="false" styleClass="success" text="Ανάκληση">
                <graphic>
                    <FontAwesomeIcon glyphName="UNDO" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="addTaskButton" styleClass="accent" text="Προσθήκη">
                <graphic>
                    <FontAwesomeIcon glyphName="PLUS" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="editTaskButton" styleClass="success" text="Επεξεργασία">
                <graphic>
                    <FontAwesomeIcon glyphName="PENCIL" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="deleteTaskButton" styleClass="danger" text="Διαγραφή">
                <graphic>
                    <FontAwesomeIcon glyphName="TRASH" />
                </graphic>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </VBox>
</VBox>

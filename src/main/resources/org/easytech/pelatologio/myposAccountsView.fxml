<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.MyposAccountsController">
   <children>
      <VBox alignment="CENTER_LEFT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Αναζήτηση:" />
                  <TextField fx:id="tfSearchAll" prefWidth="250.0" promptText="Client ID ή Όνομα Πελάτη" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Κατάσταση Επαλήθευσης:" />
                  <ComboBox fx:id="cbVerificationStatus" prefWidth="150.0" promptText="Όλες" />
                  <Label text="Κατάσταση Λογαριασμού:" />
                  <ComboBox fx:id="cbAccountStatus" prefWidth="150.0" promptText="Όλες" />
                  <Button fx:id="btnClearFilters" mnemonicParsing="false" text="Καθαρισμός Φίλτρων" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
             <Label fx:id="lblCounter" text="Σύνολο Λογαριασμών: 0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
             </Label>
            <TableView fx:id="myposAccountsTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colCustomerName" maxWidth="500.0" prefWidth="200.0" text="Πελάτης" />
                <TableColumn fx:id="colClientId" maxWidth="200.0" prefWidth="200.0" text="Client ID" />
                <TableColumn fx:id="colVerificationStatus" maxWidth="230.0" prefWidth="230.0" text="Κατάσταση Επαλήθευσης" />
                <TableColumn fx:id="colAccountStatus" maxWidth="240.0" prefWidth="240.0" text="Κατάσταση Λογαριασμού" />
                <TableColumn fx:id="colActions" maxWidth="200.0" prefWidth="200.0" text="Ενέργειες" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnSyncAll" mnemonicParsing="false" text="Συγχρονισμός Όλων" />
                  <Button fx:id="btnExport" mnemonicParsing="false" text="Εξαγωγή σε Excel" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

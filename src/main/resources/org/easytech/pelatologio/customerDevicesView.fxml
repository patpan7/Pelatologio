<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox alignment="TOP_CENTER" styleClass="pane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CustomerDevicesController">
    <VBox alignment="TOP_CENTER" styleClass="card" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </HBox.margin>
        <TableView fx:id="devicesTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="serialColumn" text="Serial Number"/>
                <TableColumn fx:id="itemColumn" text="Είδος"/>
                <TableColumn fx:id="descriptionColumn" text="Περιγραφή"/>
                <TableColumn fx:id="dateColumn" text="Ημερομηνία"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#handleEditDevice" styleClass="menu-item" text="Επεξεργασία"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddDevice" styleClass="menu-item"
                                  text="Προσθήκη"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteDevice" styleClass="menu-item"
                                  text="Διαγραφή"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddTask" styleClass="menu-item"
                                  text="Προσθήκη εργασίας"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <JFXButton fx:id="addDeviceButton" buttonType="RAISED" onAction="#handleAddDevice" prefWidth="277.0"
                   styleClass="click-button" text="Προσθήκη Συσκευής">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </JFXButton>
        <JFXButton fx:id="deleteButton" buttonType="RAISED" onAction="#handleDeleteDevice" prefWidth="277.0"
                   styleClass="click-button" text="Διαγραφή">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
        </JFXButton>
    </VBox>
</HBox>

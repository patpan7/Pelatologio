<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jfxtras.scene.control.agenda.*?>

<BorderPane stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.CalendarController">
    <!-- Επάνω Εργαλεία (ToolBar) -->
    <top>
        <HBox alignment="CENTER" spacing="10" stylesheets="@external.css">
            <Button fx:id="previousButton" text="Προηγούμενη" />
            <Label fx:id="dateRangeLabel" layoutX="20" layoutY="10" styleClass="normal-label" text="Ημερομηνία Εμφάνισης: " />
            <Button fx:id="nextButton" text="Επόμενη" />
            <Button fx:id="refreshButton" text="Ανανέωση" />
        </HBox>
    </top>

    <!-- Κεντρικό Πεδίο (Ημερολόγιο) -->
    <center>
        <Agenda fx:id="agenda" stylesheets="@external.css" />
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1200.0"  
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.easytech.pelatologio.OffersController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" >
        <BorderPane fx:id="rootPane"  StackPane.alignment="CENTER">
            <center>
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT">
                        <Label  text="Φίλτρα:">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <CheckBox fx:id="showAllCheckbox" selected="true"  text="Όλες">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="acceptCheckbox"  text="Αποδοχή">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="rejectCheckbox"  text="Απόρριψη">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="pendingCheckbox" layoutX="473.0" layoutY="20.0" 
                                  text="Αναμονή">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="archivedCheckbox" layoutX="566.0" layoutY="20.0" 
                                  text="Μόνο Αρχειοθετημένες">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </CheckBox>
                        <Separator HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnRefresh" mnemonicParsing="false"
                                onMouseClicked="#refresh"  text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/refresh.png"/>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </VBox.margin>
                    </HBox>
                    <TableView fx:id="offersTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="descriptionColumn" text="Περιγραφή"/>
                            <TableColumn fx:id="offerDateColumn" text="Ημερ. Προσφοράς"/>
                            <TableColumn fx:id="cucstomerColum" text="Πελάτης"/>
                            <TableColumn fx:id="statusColumn" text="Κατάσταση"/>
                            <TableColumn fx:id="response_dateColumn" text="Ημερ. Απόκρισης"/>
                            <TableColumn fx:id="sendedColumn" text="Email?"/>
                        </columns>
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem mnemonicParsing="false" onAction="#handleAddTask" 
                                              text="Προσθήκη εργασίας"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleShareOffer"
                                               text="Αντιγραφή συνδέσμου"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleSendEmail" 
                                              text="Αποστολή E-mail"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleAccept" 
                                              text="Αποδοχή"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleReject" 
                                              text="Απόρριψη"/>
                                    <MenuItem mnemonicParsing="false" onAction="#handleArchive" 
                                              text="Αρχειοθέτηση"/>
                                </items>
                            </ContextMenu>
                        </contextMenu>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                    <Separator visible="false" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="addOfferButton" prefWidth="220.0" 
                            text="Προσθήκη">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/add.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="editOfferButton" prefWidth="220.0" 
                            text="Επεξεργασία">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/edit.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="deleteOfferButton" prefWidth="220.0" 
                            text="Διαγραφή">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/remove.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</StackPane>

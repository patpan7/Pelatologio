<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<DialogPane expanded="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.AddDeviceController">
    <content>
        <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true">
            <HBox>
                <VBox alignment="TOP_CENTER">
                    <Label text="Διαχείριση Συσκευής" />
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </VBox.margin>

                        <Label prefWidth="140.0" text="Είδος" />
                        <ComboBox fx:id="itemComboBox" editable="true" prefWidth="300" promptText="Είδος" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </VBox.margin>
                        <Label prefWidth="140.0" text="Σειριακός">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="serialField" prefWidth="300" />
                        <Button fx:id="addSerialButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#addSerialNumber" text="" HBox.hgrow="ALWAYS">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/add.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </VBox.margin>

                        <Label prefWidth="140.0" text="Περιγραφή">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Label>
                        <TextArea fx:id="descriptionField" onMouseClicked="#handleMouseClick" prefHeight="100" prefWidth="300" wrapText="true" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </VBox.margin>
                        <Label prefWidth="140.0" text="Ποσοστό">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="rateField" editable="true" minWidth="300.0" prefWidth="300.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <VBox.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </VBox.margin>
                        <Label prefWidth="140.0" text="Πελάτης" />
                        <ComboBox fx:id="customerComboBox" editable="true" prefWidth="300" promptText="Επιλογή Πελάτη" />
                        <Button fx:id="btnCustomer" mnemonicParsing="false" onAction="#showCustomer" text="">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@icons/users.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <Label fx:id="serialListTitle" text="Λίστα Σειριακών Αριθμών:" wrapText="true" />
                    <ListView fx:id="serialListView"  />
                </VBox>
            </HBox>
        </ScrollPane>
    </content>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.easytech.pelatologio.DeviceListController">
    <BorderPane minHeight="800.0" minWidth="1200.0" styleClass="pane" stylesheets="@external.css">
        <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </BorderPane.margin>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label styleClass="header-label" text="Πελατολόγιο -  Συσκευές" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="38.0" />
                        </font>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <opaqueInsets>
                        <Insets right="20.0" />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <Button mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button" text="Επιστροφή">
                        <graphic>
                            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/menu.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                </HBox>
            </HBox>
        </top>
        <center>
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="normal-label" text="Φίλτρα:">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin></Label>
                    <CheckBox fx:id="showAllCheckbox" selected="true" styleClass="normal-label" text="Όλες">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin></CheckBox>
                    <CheckBox fx:id="showWithCustomerCheckbox" styleClass="normal-label" text="Με πελάτη">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin></CheckBox>
                    <CheckBox fx:id="showWithoutCustomerCheckbox" styleClass="normal-label" text="Χωρίς πελάτη">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin></CheckBox>
               <Separator orientation="VERTICAL" />
                    <Label styleClass="normal-label" text="Είδος">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin></Label>
                    <ComboBox fx:id="categoryFilterComboBox" editable="true" prefHeight="51.0" prefWidth="344.0">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin></ComboBox>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <Button fx:id="addSerialNumberButton" mnemonicParsing="false" styleClass="click-button" text="Προσθήκη S/N">
                        <graphic>
                            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/add.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin>
                    </Button>
               <Separator visible="false" HBox.hgrow="ALWAYS" />
               <Button fx:id="addItemButton" layoutX="926.0" layoutY="10.0" mnemonicParsing="false" styleClass="click-button" text="Προσθήκη Είδους">
                  <graphic>
                     <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@icons/add.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
                </HBox>

                <TableView fx:id="deviceTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="titleColumn" maxWidth="500.0" minWidth="250.0" prefWidth="250.0" text="Τίτλος" />
                        <TableColumn fx:id="descriptionColumn" maxWidth="700.0" minWidth="300.0" prefWidth="300.0" text="Περιγραφή" />
                        <TableColumn fx:id="dueDateColumn" maxWidth="220.0" minWidth="110.0" prefWidth="110.0" text="Ημερομηνία" />
                        <TableColumn fx:id="customerColumn" minWidth="280.0" prefWidth="280.0" text="Πελάτης" />
                        <TableColumn fx:id="categoryColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Κατηγορία" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </center>
        <bottom>

            <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                <Button fx:id="completeTaskButton" mnemonicParsing="false" prefWidth="230.0" styleClass="click-button" text="Ολοκλήρωση">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@icons/complete.png" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="uncompletedTaskButton" mnemonicParsing="false" prefWidth="230.0" styleClass="click-button" text="Ανάκληση">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@icons/pending.png" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Separator visible="false" HBox.hgrow="ALWAYS" />
                <Button fx:id="addTaskButton" prefWidth="220.0" styleClass="click-button" text="Προσθήκη">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@icons/add.png" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="editTaskButton" prefWidth="220.0" styleClass="click-button" text="Επεξεργασία">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@icons/edit.png" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="deleteTaskButton" prefWidth="220.0" styleClass="click-button" text="Διαγραφή">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@icons/remove.png" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
